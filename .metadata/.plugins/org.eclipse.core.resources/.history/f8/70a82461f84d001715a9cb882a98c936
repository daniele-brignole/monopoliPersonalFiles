package monopoli;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;
import static org.mockito.Mockito.*;
public class CompraPropriet‡LiberaTest {
	Propriet‡ p; Giocatore g; wrapper w;
	@Before
	public void setUp() throws Exception {
		w = mock(wrapper.class);
		p = new Propriet‡(1,"Via Prova",500,1,200,200);
		g = new Giocatore("Daniele","psw");
		p.setWrap(w);
		
	}

	@Test
	public void compraE1() {
		g.getMyProperties().clear();
		g.setSoldi(1000);
		when(w.getS()).thenReturn("s");
		assertTrue(p.attivaEffetto(g));
	}
	@Test
	public void compraE2(){
		g.getMyProperties().clear();
		g.setSoldi(200);
		assertFalse(p.compra(g));
	}
}
